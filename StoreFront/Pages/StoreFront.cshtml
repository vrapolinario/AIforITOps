@page
@model StoreFrontModel
@{
    ViewData["Title"] = "Store Front";
}
<h1>Store Front</h1>
<div>
    @foreach (var product in Model.Products)
    {
        <div style="border:1px solid #ccc; padding:10px; margin:10px; display:inline-block; width:200px;">
            <img src="@product.ImageUrl" alt="@product.Name" style="width:100%; height:150px; object-fit:cover;" />
            <h3>@product.Name</h3>
            <p>@product.Description</p>
            <strong>Price: $@product.Price</strong>
        </div>
    }
</div>
